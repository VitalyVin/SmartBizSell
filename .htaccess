# Enable rewrite engine
RewriteEngine On

# Явно пропускаем API-файлы по имени (работает с любым базовым путем)
RewriteCond %{REQUEST_URI} (^|/)(view_teaser|get_asset_documents|get_seller_contacts|moderation_api|blog_api|set_ai_provider)\.php [NC]
RewriteRule . - [L]

# Пропускаем прямые запросы к существующим файлам (включая PHP, CSS, JS и т.д.)
# Это правило должно быть первым - проверяет существование файла
# REQUEST_FILENAME автоматически игнорирует query string при проверке
RewriteCond %{REQUEST_FILENAME} -f
RewriteRule . - [L]

# Force HTTPS (uncomment when SSL certificate is installed)
# RewriteCond %{HTTPS} off
# RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]

# Явное правило для /blog (список статей)
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^blog/?$ blog.php [L]

# Blog post routing (blog/slug) - для отдельных статей
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^blog/([^/]+)/?$ blog_post.php?slug=$1 [L,QSA]

# Business card routing (business/{id}) - для уникальных ссылок на карточки
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^business/([0-9]+)/?$ index.php?business=$1 [L,QSA]

# Services routing (services/slug) - должно быть ПЕРЕД общим правилом
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_FILENAME} !-d
RewriteRule ^services/([^/]+)/?$ services/$1.php [L]

# Remove .php extension from URLs (общее правило в конце)
# Обрабатывает /blog -> blog.php, /about -> about.php и т.д.
RewriteCond %{REQUEST_FILENAME} !-d
RewriteCond %{REQUEST_FILENAME} !-f
RewriteCond %{REQUEST_URI} !^/blog/
RewriteCond %{REQUEST_URI} !^/services/
RewriteCond %{REQUEST_FILENAME}\.php -f
RewriteRule ^([^\.]+)$ $1.php [NC,L]

# Security headers
<IfModule mod_headers.c>
    Header set X-Content-Type-Options "nosniff"
    Header set X-Frame-Options "SAMEORIGIN"
    Header set X-XSS-Protection "1; mode=block"
</IfModule>

# Enable compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
    ExpiresByType text/html "access plus 0 seconds"
</IfModule>

# Prevent directory listing
Options -Indexes

# Default charset
AddDefaultCharset UTF-8

# PHP settings (if allowed)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

